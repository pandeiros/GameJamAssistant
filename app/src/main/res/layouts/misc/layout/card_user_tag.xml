<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_user_tag"
    android:layout_width="wrap_content"
    android:layout_height="24dp"
    card_view:cardBackgroundColor="@color/primary"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="0dp"
    android:layout_margin="2dp"
    card_view:contentPaddingBottom="2dp"
    card_view:contentPaddingLeft="8dp"
    card_view:contentPaddingRight="8dp"
    card_view:contentPaddingTop="2dp">

    <TextView
        android:id="@+id/card_user_tag_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TAG" />

</android.support.v7.widget.CardView>