<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="fill_vertical"
    android:background="@color/primary_lighter"
    android:clipToPadding="false"
    android:isScrollContainer="false"
    android:paddingBottom="32dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".HomeFragment">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="wrap_content"
            android:layout_height="192dp">

            <ImageView
                android:id="@+id/image_event_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@color/primary"
                android:scaleType="centerCrop"
                android:src="@drawable/slavic_logo" />


            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent_overlay_dark_semi" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_event_logo"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/slavic_logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="16dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Slavic Game Jam 2016"
                    android:textColor="@color/primary_text_light"
                    android:textSize="24sp" />

                <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="16dp"-->
                <!--android:layout_marginLeft="16dp"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:ellipsize="end"-->
                <!--android:maxLines="2"-->
                <!--android:text="05-07 August, Warsaw Poland"-->
                <!--android:textColor="@color/secondary_text_light"-->
                <!--android:textSize="16sp" />-->
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/expandableListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:paddingLeft="4dp"
            android:paddingTop="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_tab_event"
                    android:tint="@color/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:text="5-7 August, 2014"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_place_black_48dp"
                    android:tint="@color/secondary_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:textSize="16sp"
                    android:textColor="@color/primary_text"
                    android:text="Polna 15 Warsaw, Poland"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/divider" />

            <TextView
                android:layout_margin="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textColor="@color/primary_text"
                android:text="Slavic Game Jam is the 48-hour hackathon which goal is to make games on a given topic. It was created as a response to Nordic Game Jam (taking place every year in Copenhagen). Everyone interested in game development is invited to take part and compete for amazing awards. Additionally, there will be many interesting lectures and a Pre-Party. The first edition (2015) received a very warm welcome from both journalists and over 200 participants thus allowing SGJ to join the pantheon of the biggest game jams in Europe."/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>